mixin pagination
  .text-center
    // ul.pagination(v-if='Math.ceil(self.count / self.limit) <= 15')
    ul.pagination
      li.disabled(v-if='self.page === 1')
        a &laquo;
      li(v-if='self.page !== 1')
        a(href='#', v-on:click='onClickPage($event, self.page - 1)') &laquo;

      li(v-for='i in Math.ceil(self.count / self.limit)', v-bind:class="{ 'active': self.page === i + 1 }")
        a(v-if='self.page === i + 1') {{ i + 1 }}
        a(v-if='self.page !== i + 1' href='#', v-on:click='onClickPage($event, i + 1)') {{ i + 1 }}

      li.disabled(v-if='self.page === Math.ceil(self.count / self.limit)')
        a &raquo;
      li(v-if='self.page !== Math.ceil(self.count / self.limit)')
        a(href='#', v-on:click='onClickPage($event, self.page + 1)') &raquo;

