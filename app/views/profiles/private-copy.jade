extends ../layouts/two-column
include ./mixins/form

block main
  main

  script(type='text/template', id='template-main')
    ol.breadcrumb
      li
        a(href='../../../') ホーム
      li
        a(href='../../') 権限一覧
      li.active 権限の新規登録

    h1.page-header 権限の新規登録

    form
      +form
      .clearfix
        button.btn.btn-primary.pull-right(type='submit', v-on:click='onClick') この内容で登録する
        a.btn.btn-default(href='../../') 一覧ページへ戻る

block script
  script.
    (function () {
      'use strict';

      var Vue = window.Vue;
      var axios = window.axios;
      var FormPage = window.components.page.FormPage;
      var ProfileModel = window.models.ProfileModel;

      new FormPage().initialize({
        ModelClass: ProfileModel,
        resourceUrl: '#{baseUrl}/private/api/v1/profiles/#{resource._id}',
        method: 'POST',
        url: '#{baseUrl}/private/api/v1/profiles',
        redirect: '../../{{ id }}/',
      })
        .then(function (component) {
          component.model.form.passwordChange = true

          var vm = new Vue(component.getVueOptions({
            template: document.getElementById('template-main').innerText
          }));

          vm.$mount('main');
        })
        .catch(function (err) {
          console.error(err.stack || err);
        });
    })();

