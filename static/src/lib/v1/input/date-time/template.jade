.input-group
  input.form-control(type='text', name=self.key, id=self.key, v-model='#{self.path}.value')
  span.input-group-btn
    a.btn.btn-default(v-on:click="#{self.path}.value = new Date().getFullYear() + '-' + ('0' + (new Date().getMonth() + 1)).slice(-2) + '-' + ('0' + new Date().getDate()).slice(-2) + ' ' + ('0' + new Date().getHours()).slice(-2) + ':' + ('0' + new Date().getMinutes()).slice(-2)")
      i.glyphicon.glyphicon-time

